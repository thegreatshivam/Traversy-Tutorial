<h1 class="text-center mb-3">{{title}}</h1>
<form class="mb-4" action="/api/members" method="POST">
    <div class="form-group">
        <label for="id">ID</label>
        <input type="text" name="id" class="form-control">
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <input type="text" name="status" class="form-control">
    </div>
    <input type="submit" value="Add Member" class="btn btn-primary btn-block">
</form>
<h4>Members</h4>
<ul class="list-group">
    {{#each members}}
        <li class="list-group-item">{{this.name}} : {{this.status}}</li>
    {{/each}}
</ul>
<a href="/api/members" class="btn btn-light mt-4">Visit API</a>
